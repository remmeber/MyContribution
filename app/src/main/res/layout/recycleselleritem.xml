<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="109dp"
    android:orientation="vertical">

    <!--<RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="109dp">-->

        <RelativeLayout
            android:id="@+id/sellernamelayout"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="11dp">

            <ImageView
                android:id="@+id/sellerIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_exit" />

            <TextView
                android:id="@+id/sellerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/sellerIcon"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:minHeight="0dp"
                android:text="dddd"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/imageshowInsellerItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_right"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                />

            <View
                android:id="@+id/lineShowInsellNumberItem"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/virtureline"
                android:visibility="gone"
                android:layerType="software"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="14dp"
            android:layout_marginTop="6dp"
            android:id="@+id/linearLayout">

                <ImageView
                    android:id="@+id/sellerImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/recommend_default_icon_2" />

                <TextView
                    android:id="@+id/foodType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/searchview_background"
                    android:gravity="center"
                    android:text="dddd"
                    android:textColor="@color/colorFoodType"
                    android:textSize="12dp"
                    android:layout_alignBottom="@+id/sellerImage"
                    android:layout_toRightOf="@+id/sellerImage" />

            <ImageView
                android:id="@+id/homeForward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_right"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/distanceText"
                android:layout_alignStart="@+id/distanceText" />
            <TextView
                android:id="@+id/distanceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaaaa"
                android:textColor="@color/colorFoodType"
                android:textSize="12dp"
                android:layout_marginRight="20dp"
                android:layout_alignTop="@+id/foodType"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/demandmoney"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaaaa"
                android:textColor="@color/colorFoodType"
                android:textSize="12dp"
                android:layout_above="@+id/delivermoney"
                android:layout_alignLeft="@+id/homeForward"
                android:layout_alignStart="@+id/homeForward" />

            <TextView
                android:id="@+id/delivermoney"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaaaa"
                android:textColor="@color/colorFoodType"
                android:textSize="12dp"
                android:layout_above="@+id/distanceText"
                android:layout_alignLeft="@+id/homeForward"
                android:layout_alignStart="@+id/homeForward" />

        </RelativeLayout>




    <!--</RelativeLayout>-->

    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_height="1dp"

        android:background="@color/colorInActive" />

</LinearLayout>