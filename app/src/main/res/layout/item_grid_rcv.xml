<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clickable="false">

    <com.rhg.qf.widget.CircleImageView
        android:id="@+id/gridview_imageView"
        android:layout_width="@dimen/header_image_size"
        android:layout_height="@dimen/header_image_size"
        android:layout_marginTop="@dimen/margin_little"
        android:layout_marginBottom="@dimen/margin_little"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/gridview_imageView"
        android:layout_toRightOf="@id/gridview_imageView"
        android:background="@drawable/bg_green"
        android:paddingRight="@dimen/margin_little"
        android:paddingLeft="@dimen/margin_little">

        <TextView
            android:id="@+id/gridview_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="1"
            android:gravity="center"
            android:textSize="@dimen/text_little_small"
            tools:text="黄焖鸡米饭" />
    </RelativeLayout>


</RelativeLayout>