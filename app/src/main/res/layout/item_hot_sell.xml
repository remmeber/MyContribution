<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <!--<RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="109dp">-->

    <RelativeLayout
        android:id="@+id/sellernamelayout"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp">

        <ImageView
            android:id="@+id/sellerIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_shop" />

        <TextView
            android:id="@+id/merchantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/sellerIcon"
            android:layout_toRightOf="@id/sellerIcon"
            android:gravity="center_vertical"
            android:minHeight="0dp"
            android:textSize="@dimen/search_text_medium"
            tools:text="ddddd" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageshowInsellerItem"
            android:layout_toStartOf="@+id/imageshowInsellerItem"
            android:background="@drawable/tv_state_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/search_text_medium"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageshowInsellerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_chevron_right_black" />

        <View
            android:id="@+id/lineShowInsellNumberItem"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/line_virture"
            android:layerType="software" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="6dp">

        <ImageView
            android:id="@+id/sellerImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"
            android:src="@drawable/recommend_default_icon_2" />

        <TextView
            android:id="@+id/hot_sell_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/sellerImage"
            android:layout_toRightOf="@+id/sellerImage"
            android:textColor="@color/colorTextOrder"
            android:textSize="@dimen/text_medium"
            tools:text="黄焖鸡" />

        <TextView
            android:id="@+id/hot_sell_deliver_require"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/sellerImage"
            android:layout_toRightOf="@+id/sellerImage"
            android:gravity="center_vertical"
            android:textColor="@color/colorTextOrder"
            android:textSize="@dimen/text_small"
            tools:text="配送满20元起" />

        <TextView
            android:id="@+id/hot_sell_deliver_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sellerImage"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/sellerImage"
            android:layout_toRightOf="@+id/sellerImage"
            android:gravity="center"
            android:textColor="@color/colorTextOrder"
            android:textSize="@dimen/text_small"
            tools:text="配送费2元" />

        <TextView
            android:id="@+id/hot_sell_deliver_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_centerVertical="true"
            android:textColor="@color/colorTextOrder"
            android:textSize="@dimen/text_small"
            tools:text="bbbbbbb" />

        <TextView
            android:id="@+id/tv_totalMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/hot_sell_deliver_distance"
            android:layout_alignStart="@+id/hot_sell_deliver_distance"
            android:layout_alignBottom="@+id/hot_sell_deliver_money"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/countMoney"
            android:textColor="@color/colorRecommend_Red" />

    </RelativeLayout>


    <!--</RelativeLayout>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorInActive" />

</LinearLayout>