<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="109dp"
    android:orientation="vertical">

    <!--<RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="109dp">-->

    <RelativeLayout
        android:id="@+id/sellernamelayout"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp">

        <ImageView
            android:id="@+id/sellerIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_exit" />

        <TextView
            android:id="@+id/storeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_toRightOf="@id/sellerIcon"
            android:layout_toEndOf="@id/sellerIcon"
            android:gravity="center_vertical"
            android:minHeight="0dp"
            android:text="dddd"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/imageshowInsellerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_chevron_right_black_48dp"
            android:visibility="gone" />

        <View
            android:id="@+id/lineShowInsellNumberItem"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:background="@drawable/virtureline"
            android:layerType="software"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="6dp">

        <ImageView
            android:id="@+id/sellerImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/recommend_default_icon_2" />

        <TextView
            android:id="@+id/foodType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sellerImage"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/sellerImage"
            android:layout_toEndOf="@+id/sellerImage"
            android:background="@drawable/searchview_background"
            android:gravity="center"
            android:text="dddd"
            android:textColor="@color/colorFoodType"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/homeForward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/distanceText"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/distanceText"
            android:src="@mipmap/ic_chevron_right_black_48dp" />

        <TextView
            android:id="@+id/distanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/foodType"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:text="aaaaaa"
            android:textColor="@color/colorFoodType"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/demandmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/delivermoney"
            android:layout_alignLeft="@+id/homeForward"
            android:layout_alignStart="@+id/homeForward"
            android:text="aaaaaa"
            android:textColor="@color/colorFoodType"
            android:textSize="12dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/delivermoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/distanceText"
            android:layout_alignLeft="@+id/homeForward"
            android:layout_alignStart="@+id/homeForward"
            android:text="aaaaaa"
            android:textColor="@color/colorFoodType"
            android:textSize="12dp"
            android:visibility="gone" />

    </RelativeLayout>


    <!--</RelativeLayout>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorInActive" />

</LinearLayout>