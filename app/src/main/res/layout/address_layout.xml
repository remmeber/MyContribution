<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/address_include"
        layout="@layout/toolbar_common" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_add_new_address"
        android:layout_below="@+id/address_include">

        <com.example.rhg.outsourcing.widget.AddressRecycleViewWithDelete
            android:id="@+id/rcy_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <Button
        android:id="@+id/bt_add_new_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorActiveGreen"
        android:fitsSystemWindows="true"
        tools:text="添加新地址" />


</RelativeLayout>