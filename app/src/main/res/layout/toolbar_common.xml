<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_tab"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:fitsSystemWindows="true"
    tools:background="@color/colorActiveGreen">

    <TextView
        android:id="@+id/tb_center_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/toolbar_text_large"
        tools:text="我的订单" />

    <ImageView
        android:id="@+id/iv_tab_left"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        tools:src="@mipmap/ic_chevron_left_black_48dp" />

    <LinearLayout
        android:id="@+id/tb_right_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tb_right_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            tools:src="@mipmap/ic_place_white_48dp" />

        <TextView
            android:id="@+id/tb_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:textSize="@dimen/toolbar_text_large"
            tools:text="修改" />
    </LinearLayout>

</FrameLayout>